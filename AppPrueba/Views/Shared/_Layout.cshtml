<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/logos/logo-icon.png" sizes="16x16">
    <link rel="stylesheet" href="~/Content/Styles.css">
    <link rel="stylesheet" href="~/Content/Styles-cont.css">
    <title>@ViewBag.Title - TechnoHard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="@Url.Action("index","Home",null)">
            <img src="~/logos/logo-nav-b.png" alt="logo" runat="server" style="width:200px; height: auto;">
        </a>

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("About","Home", null)">Vision y mision</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Productos","Home", null)">Productos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Ofertas","Home", null)">Ofertas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Contact","Home", null)">Contacto</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","registros", null)">Registros</a>
            </li>
        </ul>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-4 col-md-4">
                    <h5>TechnoHard</h5>
                    <p>&copy; @DateTime.Now.Year </p>
                    <p>Bogotá D.C.</p>
                </div>


                <div class="col-4 col-md-4">
                    <h5>Nuestras Redes</h5>
                    <div class="row">
                        <div class="col-3 col-xs-3">
                            <a href="#" target="_blank">
                                <div class="fb icon">
                                    <img src="~/icons/facebook.svg" alt="Facebook" width="27" runat="server">
                                </div>
                            </a>
                        </div>
                        <div class="col-3 col-xs-3">
                            <a href="#" target="_blank">
                                <div class="tw icon">
                                    <img src="~/icons/twitter.svg" alt="Twitter" width="25" runat="server">
                                </div>
                            </a>
                        </div>
                        <div class="col-3 col-xs-3">
                            <a href="#" target="_blank">
                                <div class="ig icon">
                                    <img src="~/icons/instagram.svg" alt="Instagram" width="25" runat="server">
                                </div>
                            </a>
                        </div>
                        <div class="col-3 col-xs-3">
                            <a href="https://api.whatsapp.com/send?phone=+573194365350" target="_blank">
                                <div class="wa icon">
                                    <img src="~/icons/whatsapp.svg" alt="WhatsApp" width="25" runat="server">
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-4 col-md-4">
                    <h5>Contactanos</h5>
                    <p>Telefono: (1)696-1751</p>
                    <a id="Email" href="mailto:snarinocardenas@gmail.com"><p>Email: servicioalcliente@Technohard.com</p></a>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
