    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categorias.NombreCate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productos.NombreProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.proveedores.nombreProv)
        </td>
