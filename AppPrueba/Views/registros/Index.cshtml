    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categorias.NombreCate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productos.NombreProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.proveedores.nombreProv)
        </th>
